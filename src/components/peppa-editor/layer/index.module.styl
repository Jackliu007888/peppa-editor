.layer-wrap
  width 200px
  box-sizing border-box
  border-top 1px solid $borderColor
  border-left 1px solid $borderColor
  display flex
  flex-direction column
  .layer-title
    height 40px
    font-size 18px
    border-bottom 1px solid $borderColor
    display flex
    align-items center
    justify-content center
  .main
    flex 1
    box-sizing border-box
    padding-bottom 30px
    overflow-x hidden
    overflow-y auto
    .scroll
      display flex
      flex-direction column
      .item
        height 40px
        margin-top 10px
        display flex
        justify-content space-between
        align-items center
        box-sizing border-box
        padding 0 10px
        cursor grab
        &.selected
          border-top 1px dashed $themeColor
          border-bottom 1px dashed $themeColor
        &:hover
          .right
            opacity 1
        .left
          flex 1
          font-size 14px
          display flex
          align-items center
          .index
            border 1px solid $borderColor
            margin-right 10px
            padding 10px
        .right
          width 30px
          height 100%
          display flex
          justify-content center
          align-items center
          opacity 0
          transition opacity 0.2s ease
          cursor pointer


      .new
          height 40px
          margin-top 10px
          display flex
          align-items center
          justify-content center
          font-size 14px